<!-- Wish Card deck -->
<div class="wishcards">
    <div class="container">
        <% if (wishcards && wishcards.length === 0) { %>
        <h1>No wishcards</h1>
        <% } else { %>
        <div class="row">
            <% for (var i = 0; i < wishcards.length; i++) { %>
            <div class="card-deck">
                <!-- Card -->
                <div class="card mb-4">
                    <!--Card image-->
                    <div class="view overlay">
                        <img class="card-img-top" src="<%= wishcards[i].wishCardImage %>" alt="Card image">
                        <a href="#">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <!--Card content-->
                    <div class="card-body">
                        <!--Title-->
                        <h4 class="card-title text-center font-md crayon-font">My name is
                            <%= wishcards[i].childFirstName %></h4>
                        <!--Text-->
                        <div class="comf-font">
                            <p class="card-text">Wish : <%= wishcards[i].wishItemName %></p>
                            <p class="card-text">Interest : <%= wishcards[i].childInterest %></p>
                            <div class="row button-center">
                                <button type="button" class="wishcard-btn btn-grn-border"><a href="/wishcards">See
                                        More</a></button>
                                <button type="button" class="wishcard-btn btn-grn-bg"><a target="_blank"
                                        href="<%= wishcards[i].wishItemURL %>">
                                        Donate Gift</a></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</div>